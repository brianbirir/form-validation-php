    }
    else {
        $name = $_POST["user-name"];
    }
 
    if (empty($_POST["user-email"])) {
        $addrError = "Missing";
    }
    else {
        $address = $_POST["user-email"];
    }
 
    if (empty($_POST["user-email"]))  {
        $emailError = "Missing";
    }
    else {
        $email = $_POST["user-email"];
    }
}
}
// Beginning of HTML code

?>

